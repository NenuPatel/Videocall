<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".explorepage"
    android:background="#07145E">
    <TextView
        android:id="@+id/Explore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Explore"
        android:textColor="@color/white"
        android:textSize="40dp" />

    <TextView
        android:id="@+id/create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="90dp"
        android:text="CREATE YOUR CIRCLE"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="124dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/profilephoto"
            android:layout_width="92dp"
            android:layout_height="125dp"
            android:src="@drawable/image0" />

        <ImageButton
            android:layout_width="44dp"
            android:layout_height="46dp"
            android:id="@+id/plus"
            android:src="@drawable/plus"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="50dp"/>

        <ImageView
            android:id="@+id/photo1"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginStart="90dp"
            android:src="@drawable/image1" />

        <ImageView
            android:id="@+id/photo2"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginStart="180dp"
            android:src="@drawable/image2" />

        <ImageView
            android:id="@+id/photo3"
            android:layout_width="92dp"
            android:layout_height="match_parent"
            android:layout_marginStart="270dp"
            android:src="@drawable/image3" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="124dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        app:cardCornerRadius="12dp">

        <EditText
            android:layout_width="210dp"
            android:layout_height="100dp"
            android:id="@+id/callinguser"
            android:layout_marginTop="10dp"
            android:inputType="text"
            android:hint="calling Person name"
            android:textSize="20dp"
            android:textStyle="normal"/>
        <com.zegocloud.uikit.prebuilt.call.invite.widget.ZegoSendCallInvitationButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnvoicecall"
            android:layout_marginTop="30dp"
            android:layout_marginStart="220dp"/>
        <com.zegocloud.uikit.prebuilt.call.invite.widget.ZegoSendCallInvitationButton
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btnvideocall"
            android:layout_marginTop="30dp"
            android:layout_marginStart="285dp"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="362dp"
        android:layout_height="500dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="0dp"
        app:cardCornerRadius="12dp">

        <TextView
            android:id="@+id/txt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Recent calls"
            android:typeface="serif"
            android:textColor="@color/black"
            android:textSize="20dp" />
        <ImageView
            android:id="@+id/photo4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/image3" />
        <TextView
            android:id="@+id/edtcallingusername"
            android:layout_width="160dp"
            android:layout_height="50dp"
            android:text="Harry"
            android:textStyle="bold"
            android:textSize="26dp"
            android:gravity="center|left"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="80dp"/>


    </androidx.cardview.widget.CardView>


</RelativeLayout>